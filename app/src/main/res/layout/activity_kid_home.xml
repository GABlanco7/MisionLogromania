<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <!-- Fondo dividido (estrellas y nubes) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/stars" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/clouds" />
    </LinearLayout>

    <!-- Contenido scrollable centrado -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Avatar y nombre del niño -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatarImageView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/avatar3"
                    android:contentDescription="Avatar del niño"
                    android:layout_marginEnd="16dp"
                    android:elevation="4dp"/>

                <TextView
                    android:id="@+id/usernameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del niño"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/baloo_2"/>
            </LinearLayout>

            <!-- Título de misiones -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Misiones"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="12dp"
                android:layout_gravity="center"/>

            <!-- Lista de misiones centrada -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/missionsRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                android:background="@android:color/transparent"
                android:layout_gravity="center"/>

            <!-- Sección de estrellas acumuladas -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center">

                <!-- Título de la sección -->
                <TextView
                    android:id="@+id/tvStarsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estrellas acumuladas"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"/>

                <!-- Ícono de estrella y número -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/star_glasses"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvStarsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#FFD700"
                        android:fontFamily="@font/poppins"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Botón Canjear Recompensa -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRedeemReward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canjear Recompensa"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/purple_500"
                android:layout_gravity="center"/>

            <!-- Botón Cerrar Sesión -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar sesión"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:backgroundTint="#F44336"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>