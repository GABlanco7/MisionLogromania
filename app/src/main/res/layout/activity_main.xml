<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <!-- PARTE SUPERIOR -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Fondo estrellado -->
        <ImageView
            android:id="@+id/stars_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Fondo de estrellas"
            android:scaleType="centerCrop"
            android:src="@drawable/stars" />

        <!-- Contenido desplazado hacia abajo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="38dp"> <!-- 1 cm -->

            <!-- Cohete -->
            <ImageView
                android:id="@+id/imgRocket"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginBottom="16dp"
                android:rotation="25"
                android:src="@drawable/rocket"
                android:contentDescription="Cohete" />

            <!-- Título MISIÓN (texto amarillo con contorno) -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp">

                <!-- Contorno -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MISIÓN"
                    android:textSize="55sp"
                    android:textStyle="bold"
                    android:textColor="#F3B920"
                    android:fontFamily="@font/baloo_2"
                    android:shadowColor="#805C00"
                    android:shadowDx="6"
                    android:shadowDy="6"
                    android:shadowRadius="8" />

                <!-- Texto principal amarillo -->
                <TextView
                    android:id="@+id/tvMission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MISIÓN"
                    android:textSize="55sp"
                    android:textStyle="bold"
                    android:textColor="#FFC222"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baloo_2" />
            </FrameLayout>

            <!-- Título LOGROMANÍA (texto negro con contorno amarillo) -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp">

                <!-- Contorno -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOGROMANÍA"
                    android:textSize="55sp"
                    android:textStyle="bold"
                    android:textColor="#F3B920"
                    android:fontFamily="@font/baloo_2"
                    android:shadowColor="#FFC222"
                    android:shadowDx="6"
                    android:shadowDy="6"
                    android:shadowRadius="8" />

                <!-- Texto principal negro -->
                <TextView
                    android:id="@+id/tvLogromania"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOGROMANÍA"
                    android:textSize="55sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baloo_2" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- PARTE INFERIOR -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Fondo de nubes -->
        <ImageView
            android:id="@+id/imgClouds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/clouds"
            android:contentDescription="Fondo de nubes" />

        <!-- Contenido desplazado hacia abajo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp"
            android:layout_marginTop="38dp"> <!-- 1 cm -->

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Bienvenidos a la aventura\nde crecer logrando!"
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/merriweather"/>

            <FrameLayout
                android:id="@+id/flStartButton"
                android:layout_width="230dp"
                android:layout_height="120dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/imgStartBase"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/start_base"
                    android:contentDescription="Fondo del botón" />

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/baloo_2"
                    android:gravity="center"
                    android:text="Comenzar"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>