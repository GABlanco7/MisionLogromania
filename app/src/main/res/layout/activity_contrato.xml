<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="true">

    <!-- Fondo de estrellas y nubes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <!-- Mitad superior: estrellas -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/stars"
            android:contentDescription="Fondo estrellado" />

        <!-- Mitad inferior: nubes -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/clouds"
            android:contentDescription="Fondo de nubes" />
    </LinearLayout>

    <!-- Contenido principal -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contrato Conductual"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:fontFamily="@font/baloo_2"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp" />

            <!-- Texto completo del contrato -->
            <TextView
                android:id="@+id/tvContractText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:textColor="#000000"
                android:fontFamily="@font/merriweather" />

            <!-- Botón Aceptar -->
            <Button
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="He leído y acepto el contrato"
                android:enabled="false"
                android:backgroundTint="#7B61FF"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:paddingVertical="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>